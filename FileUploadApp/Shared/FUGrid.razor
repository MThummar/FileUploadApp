<div class="tbl-container">
    <h1 class="tbl-header">Uploaded File Records</h1>
    <div class="tbl-column-header">
        <table>
            <thead>
                <tr>
                    @Columns
                </tr>
            </thead>
        </table>
    </div>
    <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
            <tbody>
                @if (FileUploadModels.Any())
                {
                    @foreach (var file in FileUploadModels)
                    {
                        <CascadingValue Value="file">
                            <tr>
                                @Columns

                            </tr>
                        </CascadingValue>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No files uploaded yet.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
